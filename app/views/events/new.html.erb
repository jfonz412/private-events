<% provide(:title, "New Event") %>
<h1>New Event</h1>
<%= form_for @event, url: events_path do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	<br>
	<%= f.label :description %>
	<br>
	<%= f.text_area :description, placeholder: "Describe your event here...", cols: 40, rows: 20 %>
	<br>
	<%= f.label :date %>
	<br>
	<%= f.datetime_select :date, :ampm => true %>
	<br>
	<br>
	<%= f.submit "Submit" %>
<% end %>